<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
		
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
		<style>
			.txt-center {
				text-align: center;
			}

			.m-3 {
				margin: 3px;
			}
		</style>
		 <script>
					// Réglez une minuterie pour désactiver automatiquement les messages flash
					document.addEventListener('DOMContentLoaded', function() {
					var flashMessage = document.getElementById('flash-message');
					if (flashMessage) {
					setTimeout(function() {
						flashMessage.style.display = 'none';
					}, 4000);
					}});
				</script>
	</head>
	<body>
		<nav class="navbar navbar-expand-lg bg-body-tertiary mb-2">
			<div class="container-fluid">
				<a class="navbar-brand" href="{{ path('home') }}">{{ 'navbar_home'|trans({}, 'accueil') }}</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('game_list') }}">{{ 'navbar_game_list'|trans({}, 'accueil') }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('dlc_list') }}">{{ 'navbar_dlc_list'|trans({}, 'accueil')}}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('developer_list') }}">{{ 'navbar_developer_list'|trans({}, 'accueil') }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('tag_list') }}">{{ 'navbar_tag_list'|trans({}, 'accueil') }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_user_info') }}">{{ 'navbar_user_info'|trans({}, 'accueil') }}</a>
						</li>
					</ul>
				</div>
				<div class="dropdown">
					<button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
						{{ 'navbar_language'|trans({}, 'accueil') }}
					</button>
					<ul class="dropdown-menu">
						<li>
							<a class="dropdown-item" href="{{ url(app.request.attributes.get('_route'), {'_locale': 'fr'}) }}">Français</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ url(app.request.attributes.get('_route'), {'_locale': 'en'}) }}">English</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		{% block body %}{% endblock %}
	</body>
</html>
