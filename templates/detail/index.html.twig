{% block body %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

	{% for flashMessage in app.flashes('success') %}
		<div class="position-fixed top-0 p-3" style="z-index: 5" id="flash-message">
			<div class="alert alert-success" role="alert">
				{{ flashMessage }}
			</div>
		</div>
	{% endfor %}
	{% for flashMessage in app.flashes('warning') %}
		<div class="position-fixed top-0 p-3" style="z-index: 5" id="flash-message">
			<div class="alert alert-danger" role="alert">
				{{ flashMessage }}
			</div>
		</div>
	{% endfor %}
	<div id="form" class="row g-3 m-2">
		{{ form_start(form) }}
		{{ form_row(form.name, {'label': 'name_label'|trans({}, 'table_page')}) }}
		{% if form.game is defined %}
			{{ form_row(form.game, {'label': 'game_label'|trans({}, 'table_page')}) }}
		{% else %}
			{{ form_row(form.status, {'label': 'status_label'|trans({}, 'table_page')}) }}
			{{ form_row(form.developer, {'label': 'developer_label'|trans({}, 'table_page')}) }}
			{{ form_row(form.tags) }}
		{% endif %}
		{{ form_row(form.detail.price, {'label': 'price_label'|trans({}, 'table_page')}) }}
		{{ form_row(form.detail.image, {'label': 'image_label'|trans({}, 'table_page')}) }}
		{{ form_row(form.detail.description) }}
		{{ form_row(form.save, {'label': 'save_btn'|trans({}, 'table_page')}) }}
		{{ form_end(form) }}

		<a href="{{ path('game_list') }}" style="text-decoration: none;">
			<button class="btn btn-outline-secondary" style="width:200px">
				{{ "retour_btn"|trans({}, 'table_page') }}
			</button>
		</a>
	</div>
{% endblock %}
