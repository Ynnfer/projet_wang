{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}
	<h1>{{ "page_title"|trans({}, 'accueil') }}</h1>
	<div class="mt-3">
		<h2>{{ "indicateurs"|trans({}, 'accueil') }}</h2>
		<table class="table table-hover m-4">
			<thead>
				<tr>
					{{ "indicateurs_list_title"|trans({}, 'accueil')|raw }}
				</tr>
			</thead>
			<tbody>
				{% for status in gameStatusCounts %}
					<tr>
						<th>{{ status.status }}</th>
						<td>{{ status.count }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="mt-3">
		<h2>{{ "game_title"|trans({}, 'accueil') }}</h2>
		<table class="table table-hover m-4">
			<thead>
				<tr>
					{{ "game_list_title"|trans({}, 'accueil')|raw }}
				</tr>
			</thead>
			<tbody>
				{% for game in latestGames %}
					<tr>
						<th scope="row">{{game.id}}</th>
						<td>{{game.name}}</td>
						<td>{{game.developer.name}}</td>
						<td>{{game.status}}</td>
						<td>
							{% for tag in game.tags %}
								{{tag.name}}
							{% endfor %}
						</td>
						<td>
							{{game.dlcs | length}}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="mt-3">
		<h2>{{ "status_title"|trans({}, 'accueil') }}</h2>
		<table class="table table-hover m-4">
			<thead>
				<tr>
					{{ "status_table_title"|trans({}, 'accueil')|raw }}
				</tr>
			</thead>
			<tbody>
				{% for status, ratio in statusRatios %}
					<tr>
						<th>{{ status }}</th>
						<td>{{ ratio | number_format(2) }}
							%</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
