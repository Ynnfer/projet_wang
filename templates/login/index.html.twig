{% block body %}
	<style></style>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

	<div class="m-5">
		<h1>Veuillez vous connecter Ã  votre compte :</h1>
		{% if error %}
			<div style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<form action="{{ path('app_login') }}" method="post">
			<div class="form-group mt-4">
				<label for="email">Email:</label>
				<input type="email" class="form-control" id="email" name="_email" value="{{ last_username }}" required/>
			</div>
			<div class="form-group">
				<label for="password">Mot de passe:</label>
				<input type="password" class="form-control" id="password" name="_password" required/>
			</div>
			<div class="mt-5">
				<button type="submit" class="btn btn-outline-success" style="float: left;" name="login">Connexion</button>
				<button type="button" class="btn btn-outline-primary" style="float: right;">
					<a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
				</button>
			</div>
		</form>
	</div>

{% endblock %}
