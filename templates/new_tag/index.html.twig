{% block body %}
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
	
	<h1 class="text-center mt-4">{{ "newTag_page_title"|trans({}, 'table_page') }}</h1>

	{% for flashMessage in app.flashes('success') %}
		<div class="position-fixed top-0 p-3" style="z-index: 5" id="flash-message">
			<div class="alert alert-success" role="alert">
				{{ flashMessage }}
			</div>
		</div>
	{% endfor %}
	{% for flashMessage in app.flashes('warning') %}
		<div class="position-fixed top-0 p-3" style="z-index: 5" id="flash-message">
			<div class="alert alert-danger" role="alert">
				{{ flashMessage }}
			</div>
		</div>
	{% endfor %}

	<div id="form" class="row g-3 m-2">
		{{ form_start(form) }}
			{{ form_row(form.name, {'label': 'name_label'|trans({}, 'table_page')}) }}
			{{ form_row(form.save, {'label': 'save_btn'|trans({}, 'table_page')}) }}
		{{ form_end(form) }}
		<a href="{{ path('tag_list') }}" style="text-decoration: none;">
			<button class="btn btn-outline-secondary" style="width:200px">
				{{ "retour_btn"|trans({}, 'table_page') }}
			</button>
		</a>
	</div>
{% endblock %}
