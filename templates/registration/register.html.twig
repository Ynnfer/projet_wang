{# {% extends 'base.html.twig' %} #}

{% block body %}
	<style>
		.text-error {
			color: red;
		}

		.m-login {
			margin: 100px 200px;
		}
	</style>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

	<div class="m-login">
		<h1>Veuillez-vous inscrire :</h1>

		{{ form_errors(registrationForm, {'attr': {'style': 'color: red'}}) }}

		{{ form_start(registrationForm, {'attr': {'class': 'form-group mt-4'}}) }}

		<div class="form-group">
			<label for="{{ registrationForm.email.vars.id }}">Email:</label>
			{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="form-group">
			<label for="{{ registrationForm.plainPassword.vars.id }}">Password:</label>
			{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
		</div>

		<div class="form-group mt-4">
			<label for="{{ registrationForm.agreeTerms.vars.id }}">Agree to Terms:</label>
			{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mb-4'}}) }}
		</div>

		<div class="row">
			<div class="col-md-6">
				<button type="submit" class="btn btn-outline-success">Register</button>
			</div>
			<div class="col-md-6">
				<button type="button" class="btn btn-style btn-outline-secondary" style="float:right">
					<a class="nav-link" href="{{ path('app_login') }}">Déjà un compte ?</a>
				</button>
			</div>
		</div>

		{{ form_end(registrationForm) }}
	</div>

{% endblock %}
