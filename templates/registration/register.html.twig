{# {% extends 'base.html.twig' %} #}

{% block body %}
<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
        .text-error {
            color:red;
        }
	</style>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

    <h1>Veuillez-vous inscrire :</h1>

    {{ form_errors(registrationForm,{'attr': {'style': 'color: red'}}) }}

    <form method="{{ registrationForm.vars.method }}" action="{{ registrationForm.vars.action }}" class="form-group mt-4">
        <div>
            <label for="{{ registrationForm.email.vars.id }}">Email:</label>
            {{ form_widget(registrationForm.email,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div>
            <label for="{{ registrationForm.plainPassword.vars.id }}">Password:</label>
            {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control'}}) }}
        </div>

        <div>
            <label for="{{ registrationForm.agreeTerms.vars.id }}">Agree to Terms:</label>
            {{ form_widget(registrationForm.agreeTerms,{'attr': {'class': 'mb-4 mt-4'}}) }}
        </div>

        <button type="submit" class="btn btn-outline-success">Register</button>
    </form>
{% endblock %}
